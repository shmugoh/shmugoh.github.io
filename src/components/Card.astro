---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<a class="ProjectCard" href={href}>
  <div class="ProjectTitle">
    <div class="ProjectIcon"></div>
    <h3 class="ProjectTitleContent">{title}</h3>
  </div>
  <div class="ProjectBody">
    <h4 class="ProjectBodyContent">{body}</h4>
  </div>
</a>

<style>
  .ProjectCard {
    @apply flex h-fit w-full flex-col border-b-2 p-[20px];
  }

  .ProjectTitle {
    @apply flex flex-row gap-[10px];
  }
  .ProjectIcon {
    height: 32px;
    width: 32px;
    background-color: #d9d9d9;
  }
  .ProjectTitleContent {
    font-size: 24px;
    font-weight: bold;
  }

  .ProjectBody {
    @apply flex flex-wrap py-[8px];
  }
  .ProjectBodyContent {
    font-size: 12px;
    font-weight: 500;
    text-align: center;
  }
</style>
